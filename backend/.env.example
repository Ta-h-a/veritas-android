# Backend Server Environment Configuration
# Copy this file to .env and replace with your actual values

# Database Encryption Keys
# Generate new keys for production using: openssl rand -base64 32
ENCRYPTION_KEY=your_32_character_base64_encryption_key_here
SIGNING_KEY=your_64_character_base64_signing_key_here

# MongoDB Database Configuration
# Replace with your actual MongoDB connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Server Configuration
PORT=8080
